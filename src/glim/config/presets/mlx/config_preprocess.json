{
  /*** Preprocessing parameters for MLX LiDAR ***/
  // MLX: 56 x 192 = 10752 points per scan at 20Hz
  "preprocess": {
    "distance_near_thresh": 0.5,
    "distance_far_thresh": 100.0,
    "use_random_grid_downsampling": false,
    "downsample_resolution": 0.0,
    "random_downsample_target": 0,
    "random_downsample_rate": 0.5,
    // Statistical Outlier Removal (SOR) - 고립된 노이즈 포인트 제거
    // k: 이웃 수 (낮을수록 공격적), std_mul: 표준편차 배수 (낮을수록 공격적)
    // MLX: 56x192 solid-state, 수직 화각 33.2도로 좁아 k를 낮게 설정
    "enable_outlier_removal": true,
    "outlier_removal_k": 6,
    "outlier_std_mul_factor": 1.5,
    // Intensity filter - 낮은 반사 강도의 불확실한 포인트 제거
    "enable_intensity_filter": true,
    "intensity_min_thresh": 30.0,
    "enable_cropbox_filter": false,
    "crop_bbox_frame": "lidar",
    "crop_bbox_min": [-1.0, -1.0, -1.0],
    "crop_bbox_max": [1.0, 1.0, 1.0],
    "k_correspondences": 50,
    "num_threads": 4
  }
}
