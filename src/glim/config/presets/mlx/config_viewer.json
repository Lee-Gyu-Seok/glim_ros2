{
  // Standard viewer settings
  // viewer_(width|height)    : Default viewer window size
  // default_z_range          : Default z-range for the viewer
  // enable_partial_rendering : If true, enable partial rendering. In the partial render mode, only a part of the submaps is rendered every frame, and accumulated through multiple frames
  //                          : This can be useful for real-time visualization on low-end GPUs but introduces some glitches
  // partial_rendering_budget : Number of points to render per frame
  "standard_viewer": {
    "viewer_width": 2560,
    "viewer_height": 1440,
    "default_z_range": [
      -2.0,
      4.0
    ],
    "enable_partial_rendering": false,
    "partial_rendering_budget": 1024,
    "point_shape_circle": true,
    "point_size_metric": false,
    "point_size": 10.0,
    "points_alpha": 0.5,
    "factors_alpha": 0.5,
    // Camera settings
    // camera_mode: "orbit_xy", "orbit_xz", "topdown", "arcball"
    "camera_mode": "orbit_xy",
    "camera_distance": 50.0,
    "camera_yaw": 3.14,
    "camera_pitch": -0.595,
    "camera_focal_point": [5.0, 0.0, 0.0]
  },
  "interactive_viewer": {
    "viewer_width": 2560,
    "viewer_height": 1440,
    "default_z_range": [
      -2.0,
      4.0
    ],
