{
  "sub_mapping": {
    "so_name": "libsub_mapping.so",
    "enable_imu": false,
    "enable_optimization": true,
    // Increase keyframes for better odometry accuracy
    "max_num_keyframes": 20,
    "keyframe_update_strategy": "DISPLACEMENT",
    "keyframe_update_min_points": 500,
    // Reduce update intervals for more frequent keyframes
    "keyframe_update_interval_rot": 0.5,
    "keyframe_update_interval_trans": 0.3,
    "max_keyframe_overlap": 0.8,
    "create_between_factors": true,
    "between_registration_type": "GICP",
    "registration_error_factor_type": "VGICP",
    "keyframe_randomsampling_rate": 1.0,
    // Finer voxel resolution for accuracy
    "keyframe_voxel_resolution": 0.05,
    "keyframe_voxelmap_levels": 4,
    "keyframe_voxelmap_scaling_factor": 2.0,
    "submap_downsample_resolution": 0.05,
    "submap_voxel_resolution": 0.05
  }
}
