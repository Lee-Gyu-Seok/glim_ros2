{
  /*** RGB Colorizer Configuration ***/
  "rgb_colorizer": {
    // Enable/disable RGB colorizer
    "enabled": true,

    // ROS topic for compressed image
    "image_topic": "/spadi/rgb_image/image_raw/compressed",

    // Time sync tolerance between image and point cloud (seconds)
    "sync_tolerance": 0.05,

    // Maximum number of images to buffer
    "max_buffer_size": 30,

    // Z-buffer occlusion handling
    "enable_z_buffer": false,              // Enable Z-buffer based occlusion handling
    "splat_size_mode": "physical",         // "fixed", "adaptive" (depth-based), or "physical" (LiDAR angular resolution based)
    "fixed_splat_size": 3,                 // Splat size when mode is "fixed"
    "lidar_angular_resolution": 0.2,       // LiDAR angular resolution in degrees (for "physical" mode)

    // Image processing options
    "enable_undistort": false,             // Undistort image first, then use simple pinhole projection
    "image_resize_scale": 0.25,            // Scale factor: 1.0=original, 0.5=half size, 0.25=quarter size

    // Motion compensation (correct for LiDAR-camera time difference using IMU trajectory)
    "enable_motion_compensation": false
  }
}
