{
  /*** ROS-related config for MLX LiDAR ***/
  "glim_ros": {
    // Backend modules
    "enable_local_mapping": true,
    "enable_global_mapping": true,
    // Points config
    "keep_raw_points": false, // 사용 X
    // IMU config
    "imu_time_offset": 0.0,
    "points_time_offset": 0.0,
    "acc_scale": 1.0,
    // TF config
    "imu_frame_id": "imu",
    "lidar_frame_id": "/spadi/lidar",
    "base_frame_id": "",
    "odom_frame_id": "odom",
    "map_frame_id": "map",
    "publish_imu2lidar": true,
    "tf_time_offset": 1e-6,
    // Extension modules
    "extension_modules": [
      "libmemory_monitor.so",
      // "libstandard_viewer.so",  // Main UI viewer (disabled - use RViz instead)
      "librgb_colorizer_ros.so",  // RGB colorizer (must be before rviz_viewer)
      "librviz_viewer.so",
      "libscan_context_loop_detector.so",
      "libgravity_estimator.so"
    ],
    // Topics for MLX
    "imu_topic": "/spadi/imu",
    "points_topic": "/spadi/pointcloud",
    "image_topic": "",
    // RGB colorizer settings (calibration loaded from config_sensors.json)
    "rgb_colorizer_enabled": true,
    "rgb_image_topic": "/spadi/rgb_image/image_raw/compressed",
    "rgb_sync_tolerance": 0.05,
    "rgb_max_buffer_size": 30,
    // Z-buffer occlusion handling (like merge_image_pointcloud)
    "rgb_enable_z_buffer": true,           // Enable Z-buffer based occlusion handling
    "rgb_splat_size_mode": "physical",     // "fixed", "adaptive" (depth-based), or "physical" (LiDAR angular resolution based)
    "rgb_fixed_splat_size": 3,             // Splat size when mode is "fixed"
    "rgb_lidar_angular_resolution": 0.2,   // LiDAR angular resolution in degrees (for "physical" mode)
    // Image undistortion (better color quality via bilinear interpolation during remap)
    "rgb_enable_undistort": true,          // Undistort image first, then use simple pinhole projection
    // Motion compensation (correct for LiDAR-camera time difference using IMU trajectory)
    "rgb_enable_motion_compensation": true,
    // QoS options
    "imu_qos": {
      "profile": "sensor_data",
      "depth": 1000
    },
    "points_qos": {
      "profile": "sensor_data"
    },
    "image_qos": {
      "profile": "sensor_data"
    }
  }
}
