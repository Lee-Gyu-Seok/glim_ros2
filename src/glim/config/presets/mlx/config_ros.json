{
  /*** ROS-related config for MLX LiDAR ***/
  "glim_ros": {
    // Backend modules
    "enable_local_mapping": true,
    "enable_global_mapping": true,
    // Points config
    "keep_raw_points": false,
    // IMU config
    "imu_time_offset": 0.0,
    "points_time_offset": 0.0,
    "acc_scale": 1.0,
    // TF config
    "imu_frame_id": "imu",
    "lidar_frame_id": "/spadi/lidar",
    "base_frame_id": "",
    "odom_frame_id": "odom",
    "map_frame_id": "map",
    "publish_imu2lidar": true,
    "tf_time_offset": 1e-6,
    // Extension modules
    "extension_modules": [
      "libmemory_monitor.so",
      // "libstandard_viewer.so",  // Main UI viewer (disabled - use RViz instead)
      "librgb_colorizer_ros.so",  // RGB colorizer (must be before rviz_viewer)
      "librviz_viewer.so",
      "libscan_context_loop_detector.so",
      "libgravity_estimator.so"
    ],
    // Topics for MLX
    "imu_topic": "/spadi/imu",
    "points_topic": "/spadi/pointcloud",
    "image_topic": "",
    // RGB colorizer settings
    "rgb_colorizer_enabled": true,
    "rgb_image_topic": "/spadi/rgb_image/image_raw/compressed",
    "rgb_calibration_file": "/home/soslab/Documents/bags/Pangyo_indoor_parking_lot_slam_2025_11_19-19_31_37/calibration_params.json",
    "rgb_sync_tolerance": 0.03,
    "rgb_max_buffer_size": 30,
    // QoS options
    "imu_qos": {
      "profile": "sensor_data",
      "depth": 1000
    },
    "points_qos": {
      "profile": "sensor_data"
    },
    "image_qos": {
      "profile": "sensor_data"
    }
  }
}
