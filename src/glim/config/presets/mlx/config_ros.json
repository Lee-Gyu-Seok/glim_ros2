{
  /*** ROS-related config for MLX LiDAR ***/
  "glim_ros": {
    // Backend modules
    "enable_local_mapping": true,
    "enable_global_mapping": true,
    // Points config
    "keep_raw_points": true, // RGB colorizer에서 원본 포인트 사용 (다운샘플링 없음)
    // IMU config
    // # past: "imu_time_offset": 0.0,
    "imu_time_offset": -0.012,  // IMU validator 분석 결과 적용 (IMU 데이터가 LiDAR보다 12ms 빠름)
    "points_time_offset": 0.0,
    "acc_scale": 1.0,
    // TF config
    "imu_frame_id": "imu",
    "lidar_frame_id": "/spadi/lidar",
    "camera_frame_id": "/spadi/camera",
    "base_frame_id": "",
    "odom_frame_id": "odom",
    "map_frame_id": "map",
    "publish_imu2lidar": true,
    "publish_lidar2camera": true,
    "tf_time_offset": 1e-6,
    // Extension modules
    "extension_modules": [
      "libmemory_monitor.so",
      // "libstandard_viewer.so",  // Main UI viewer (disabled - use RViz instead)
      "librgb_colorizer_ros.so",  // RGB colorizer (must be before rviz_viewer)
      "librviz_viewer.so",
      "libscan_context_loop_detector.so",
      "libgravity_estimator.so",
      "libimu_validator_headless.so"  // IMU calibration validator (headless, logs to console)
    ],
    // Topics for MLX
    "imu_topic": "/spadi/imu",
    "points_topic": "/spadi/pointcloud",
    "image_topic": "",
    "rgb_image_topic": "/spadi/rgb_image/image_raw/compressed",  // For glim_rosbag to republish images
    // RGB colorizer integration
    "rgb_colorizer_enabled": true,  // Enable RGB colorization for rviz_viewer
    // Map settings
    "map_publish_interval": 1.0,  // Seconds between /glim_ros/map publishes (default: 10.0)
    "map_downsample_resolution": 0.2,  // Voxel resolution for downsampled_map.pcd (0 = disable)
    // QoS options
    "imu_qos": {
      "profile": "sensor_data",
      "depth": 1000
    },
    "points_qos": {
      "profile": "sensor_data"
    },
    "image_qos": {
      "profile": "sensor_data"
    }
  }
}
