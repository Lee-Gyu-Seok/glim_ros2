{
  /*** Sensor configurations for MLX LiDAR ***/
  // MLX Solid-State LiDAR Specifications
  "lidar_spec": {
    "type": "solid_state",
    "vertical_channels": 56,
    "horizontal_points": 192,
    "horizontal_fov": 120.0,
    "vertical_fov": 30.0,
    "max_range": 100.0,
    "scan_rate": 20
  },

  // T_lidar_imu format: [x, y, z, qx, qy, qz, qw] (TUM format)
  // Given extrinsic_T: [-0.086, 0.062, -0.015] (IMU -> LiDAR translation)
  // Given extrinsic_R: Identity matrix (no rotation)
  // T_lidar_imu is the inverse: LiDAR -> IMU, so translation is negated
  "sensors": {
    // IMU config
    // IMU 노이즈를 높게 설정하여 Factor Graph에서 IMU 영향력 감소 (Z축 지터 완화)
    "imu_acc_noise": 1.0,
    "imu_gyro_noise": 0.1,
    "imu_int_noise": 0.001,
    "imu_bias_noise": 0.001,
    // LiDAR config
    "global_shutter_lidar": false,
    // # past spadi: "T_lidar_imu": [0.052, 0.083, 0.018, 0.0, 0.0, 0.0, 1.0],
    "T_lidar_imu": [
      0.086,
      -0.062,
      0.015,
      0.0,
      0.0,
      0.0,
      1.0
    ],
    "intensity_field": "intensity",
    "ring_field": "ring",
    // LiDAR per-point time settings
    // MLX uses 't' field with uint32 timestamps
    "autoconf_perpoint_times": false,
    "autoconf_prefer_frame_time": false,
    "perpoint_relative_time": true,
    "perpoint_time_scale": 1e-9,
    // Camera config for RGB colorization
    "global_shutter_camera": true,
    "image_size": [1920, 1200],
    // # past spadi: "T_lidar_camera": [0.11208, -0.03075, -0.00991, 0.50809, -0.50212, 0.49961, 0.49001],
    "T_lidar_camera": [0.041461310225722275, -0.006154354384287106, -0.007143427717059438, 0.5035784765834423, -0.4960047911383731, 0.4971726173604331, 0.5031971319837333],
    // # past spadi: "intrinsics": [1178.14959, 1182.06921, 970.00208, 601.90079],
    "intrinsics": [1180.9734547778685, 1189.477655584683, 949.7758750493107, 594.3388853461529],
    "distortion_model": "plumb_bob",
    // # past spadi: "distortion_coeffs": [-0.21612, 0.05788, -0.00017, 0.00053, 0.0]
    "distortion_coeffs": [-0.21955777321553152, 0.0781830442318065, 0.0036719587166633674, -0.0024038116994094237, 0.0]
  }
}
