{
  /*** Sensor configurations for MLX LiDAR ***/
  // MLX Solid-State LiDAR Specifications
  "lidar_spec": {
    "type": "solid_state",
    "vertical_channels": 56,
    "horizontal_points": 192,
    "horizontal_fov": 120.0,
    "vertical_fov": 30.0,
    "max_range": 100.0,
    "scan_rate": 20
  },

  // T_lidar_imu format: [x, y, z, qx, qy, qz, qw] (TUM format)
  // Given extrinsic_T: [-0.052, -0.083, -0.018] (IMU -> LiDAR translation)
  // Given extrinsic_R: Identity matrix (no rotation)
  // T_lidar_imu is the inverse: LiDAR -> IMU, so translation is negated
  "sensors": {
    // IMU config
    "imu_acc_noise": 0.5,
    "imu_gyro_noise": 0.3,
    "imu_int_noise": 0.001,
    "imu_bias_noise": 0.001,
    // LiDAR config
    "global_shutter_lidar": false,
    "T_lidar_imu": [
      0.052,
      0.083,
      0.018,
      0.0,
      0.0,
      0.0,
      1.0
    ],
    "intensity_field": "intensity",
    "ring_field": "ring",
    // LiDAR per-point time settings
    // MLX uses 't' field with uint32 timestamps
    "autoconf_perpoint_times": false,
    "autoconf_prefer_frame_time": false,
    "perpoint_relative_time": true,
    "perpoint_time_scale": 1e-9,
    // Camera config for RGB colorization
    "global_shutter_camera": true,
    "image_size": [1920, 1200],
    "T_lidar_camera": [0.11208, -0.03075, -0.00991, 0.50809, -0.50212, 0.49961, 0.49001],
    "intrinsics": [1178.14959, 1182.06921, 970.00208, 601.90079],
    "distortion_model": "plumb_bob",
    "distortion_coeffs": [-0.21612, 0.05788, -0.00017, 0.00053, 0.0]
  }
}
